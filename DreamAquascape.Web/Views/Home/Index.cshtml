@{  
    ViewData["Title"] = "Welcome to DreamAquascape";  
}  

<style>  
    .aquascape-hero {  
        background: linear-gradient(135deg, #e0f7fa 0%, #b2dfdb 100%);  
        border-radius: 2rem;  
        box-shadow: 0 8px 32px rgba(0, 105, 92, 0.10);  
        padding: 3rem 2rem 3rem 2rem;  
        margin-top: 2.5rem;  
        margin-bottom: 2.5rem;  
        text-align: center;  
        position: relative;  
        overflow: hidden;  
    }  

    .aquascape-hero h1 {  
        font-weight: 800;  
        color: #009688;  
        letter-spacing: 1px;  
        margin-bottom: 1rem;  
    }  

    .aquascape-hero p {  
        color: #00695c;  
        font-size: 1.25rem;  
        margin-bottom: 2.5rem;  
    }  

    .aquascape-hero .hero-buttons .btn {  
        min-width: 200px;  
        font-size: 1.15rem;  
        font-weight: 600;  
        margin: 0 1rem;  
        border-radius: 2rem;  
        padding: 0.75rem 2rem;  
        box-shadow: 0 2px 8px rgba(0, 105, 92, 0.08);  
        transition: transform 0.15s, box-shadow 0.15s;  
    }  

    .aquascape-hero .btn-primary {  
        background: linear-gradient(90deg, #26a69a 0%, #009688 100%);  
        border: none;  
    }  

    .aquascape-hero .btn-primary:hover {  
        background: linear-gradient(90deg, #009688 0%, #26a69a 100%);  
        transform: translateY(-2px) scale(1.04);  
        box-shadow: 0 4px 16px rgba(0, 105, 92, 0.16);  
    }  

    .aquascape-hero .btn-outline-info {  
        color: #009688;  
        border-color: #009688;  
        background: #fff;  
    }  

    .aquascape-hero .btn-outline-info:hover {  
        background: #b2dfdb;  
        color: #004d40;  
        border-color: #26a69a;  
        transform: translateY(-2px) scale(1.04);  
        box-shadow: 0 4px 16px rgba(0, 105, 92, 0.10);  
    }  

    .aquascape-hero .hero-buttons .btn {  
        margin: 0.5rem 0;  
        width: 100%;  
    }  

    .aquascape-hero .hero-bg-svg {  
        position: absolute;  
        bottom: -40px;  
        left: 0;  
        width: 100%;  
        opacity: 0.15;  
        z-index: 0;  
    }  
</style>  

<div class="container">  
    <div class="aquascape-hero">  
        <h1>  
            <img src="https://img.icons8.com/color/48/000000/aquarium.png" alt="DreamAquascape Logo" style="height:48px;vertical-align:middle;margin-right:10px;">  
            Welcome to DreamAquascape  
        </h1>  
        <p>  
            Dive into the world of aquascaping! Shop premium accessories for your aquarium or join our vibrant contests to showcase your creativity and win exciting prizes.  
        </p>  
        <div class="hero-buttons d-flex flex-column flex-md-row justify-content-center align-items-center mb-3" style="z-index:1; position:relative;">  
            <a class="btn btn-primary mb-3 mb-md-0" asp-controller="Accessories" asp-action="Index">  
                🛒 Shop Accessories  
            </a>  
            <a class="btn btn-outline-info" asp-controller="Contests" asp-action="Index">  
                🏆 Aquascaping Contests  
            </a>  
        </div>  
        <svg class="hero-bg-svg" viewBox="0 0 1440 320"><path fill="#009688" fill-opacity="1" d="M0,224L60,197.3C120,171,240,117,360,117.3C480,117,600,171,720,197.3C840,224,960,224,1080,197.3C1200,171,1320,117,1380,90.7L1440,64L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path></svg>  
    </div>  
</div>

@model DreamAquascape.Web.ViewModels.Home.HomeIndexViewModel
@using static DreamAquascape.Web.ViewModels.Home.ContestStatusHelper
@{
    ViewData["Title"] = "DreamAquascape - Aquascaping Contests & Community";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #e0f7fa 0%, #b2dfdb 100%);
        border-radius: 2rem;
        box-shadow: 0 8px 32px rgba(0, 105, 92, 0.10);
        padding: 3rem 2rem;
        margin: 2rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .hero-section h1 {
            font-weight: 800;
            color: #009688;
            letter-spacing: 1px;
            margin-bottom: 1rem;
            font-size: 2.5rem;
        }

        .hero-section .subtitle {
            color: #00695c;
            font-size: 1.3rem;
            margin-bottom: 2rem;
            font-weight: 300;
        }

    .hero-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 2rem;
    }

    .btn-hero {
        min-width: 200px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 2rem;
        padding: 0.75rem 2rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn-hero.primary {
            background: linear-gradient(90deg, #26a69a 0%, #009688 100%);
            color: #fff;
            border: none;
            box-shadow: 0 4px 15px rgba(0, 105, 92, 0.2);
        }

            .btn-hero.primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0, 105, 92, 0.3);
                color: #fff;
            }

        .btn-hero.secondary {
            background: #fff;
            color: #009688;
            border: 2px solid #009688;
            box-shadow: 0 2px 10px rgba(0, 105, 92, 0.1);
        }

            .btn-hero.secondary:hover {
                background: #f0fdfc;
                color: #00695c;
                transform: translateY(-1px);
            }

    .stats-row {
        background: #fff;
        border-radius: 1.5rem;
        padding: 2rem;
        margin: 2rem 0;
        box-shadow: 0 4px 20px rgba(0, 105, 92, 0.08);
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: #009688;
        display: block;
    }

    .stat-label {
        color: #00695c;
        font-size: 1rem;
        font-weight: 500;
        margin-top: 0.5rem;
    }

    .contests-section h2 {
        color: #009688;
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
    }

    .contest-card {
        background: #fff;
        border-radius: 1.5rem;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0, 105, 92, 0.08);
        border-left: 5px solid #009688;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

        .contest-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 105, 92, 0.15);
        }

    .contest-status {
        position: absolute;
        top: 1rem;
        right: 1rem;
        display: inline-block;
        padding: 0.3rem 1rem;
        border-radius: 1rem;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0;
        z-index: 1;
    }

    .status-active {
        background: #c8f7c5;
        color: #2e7d32;
    }

    .status-voting {
        background: #fff3cd;
        color: #856404;
    }

    .status-upcoming {
        background: #cce5ff;
        color: #004085;
    }

    .status-ended {
        background: #f8d7da;
        color: #721c24;
    }

    .contest-title {
        color: #009688;
        font-weight: 600;
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .contest-meta {
        color: #666;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .contest-actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-sm-custom {
        padding: 0.5rem 1rem;
        border-radius: 1rem;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 3rem 0;
    }

    .feature-card {
        background: #fff;
        border-radius: 1.5rem;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 105, 92, 0.08);
        transition: transform 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
        }

    .feature-icon {
        font-size: 3rem;
        color: #009688;
        margin-bottom: 1rem;
    }

    .feature-title {
        color: #009688;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .feature-description {
        color: #666;
        line-height: 1.6;
    }
</style>

<div class="container">
    <!-- Hero Section -->
    <div class="hero-section">
        <h1>
            <i class="bi bi-droplet-fill text-primary me-3"></i>
            DreamAquascape
        </h1>
        <p class="subtitle">Join the ultimate aquascaping community. Compete, vote, and showcase your underwater masterpieces.</p>

        <div class="hero-actions">
            <a asp-controller="Contests" asp-action="Index" class="btn-hero primary">
                <i class="bi bi-trophy me-2"></i>Browse Contests
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="User" asp-action="Dashboard" class="btn-hero secondary">
                    <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
                </a>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Register" class="btn-hero secondary">
                    <i class="bi bi-person-plus me-2"></i>Join Community
                </a>
            }
        </div>
    </div>

    <!-- Statistics Row -->
    <div class="stats-row">
        <div class="row">
            <div class="col-md-3 stat-item">
                <span class="stat-number">@Model.ActiveContests</span>
                <div class="stat-label">Active Contests</div>
            </div>
            <div class="col-md-3 stat-item">
                <span class="stat-number">@Model.TotalUsers</span>
                <div class="stat-label">Community Members</div>
            </div>
            <div class="col-md-3 stat-item">
                <span class="stat-number">@Model.TotalEntries</span>
                <div class="stat-label">Aquascapes Submitted</div>
            </div>
            <div class="col-md-3 stat-item">
                <span class="stat-number">@Model.TotalVotes</span>
                <div class="stat-label">Votes Cast</div>
            </div>
        </div>
    </div>

    <!-- Featured Contests Section -->
    <div class="contests-section">
        <h2><i class="bi bi-stars me-2"></i>Featured Contests</h2>

        @if (Model.HasFeaturedContests)
        {
            <div class="row">
                @if (Model.ActiveContest != null)
                {
                    @await Html.PartialAsync("_FeaturedContestCard", Model.ActiveContest)
                }

                @if (Model.VotingContest != null)
                {
                    @await Html.PartialAsync("_FeaturedContestCard", Model.VotingContest)
                }
            </div>

            <div class="row">
                @if (Model.UpcomingContest != null)
                {
                    @await Html.PartialAsync("_FeaturedContestCard", Model.UpcomingContest)
                }

                @if (Model.RecentlyEndedContest != null)
                {
                    @await Html.PartialAsync("_FeaturedContestCard", Model.RecentlyEndedContest)
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>
                No featured contests available at the moment. Check back soon for exciting new competitions!
            </div>
        }

        <div class="text-center mt-4">
            <a asp-controller="Contests" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-grid me-2"></i>View All Contests
            </a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-trophy"></i>
            </div>
            <h4 class="feature-title">Compete & Win</h4>
            <p class="feature-description">
                Join exciting contests across multiple categories. From nano tanks to large displays,
                showcase your aquascaping skills and win amazing prizes.
            </p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-heart"></i>
            </div>
            <h4 class="feature-title">Vote & Discover</h4>
            <p class="feature-description">
                Explore stunning aquascapes from our community. Cast your votes for favorites
                and discover new techniques and inspiration.
            </p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-graph-up"></i>
            </div>
            <h4 class="feature-title">Track Progress</h4>
            <p class="feature-description">
                Monitor your contest performance, view detailed statistics, and track your
                journey as you grow in the aquascaping community.
            </p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-people"></i>
            </div>
            <h4 class="feature-title">Join Community</h4>
            <p class="feature-description">
                Connect with fellow aquascapers worldwide. Share knowledge, get feedback,
                and be part of the most passionate aquascaping community.
            </p>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="hero-section" style="margin-top: 4rem;">
        <h2>Ready to showcase your aquascaping talent?</h2>
        <p class="subtitle">Join thousands of aquascapers in our vibrant community</p>
        <div class="hero-actions">
            <a asp-controller="User" asp-action="Dashboard" class="btn-hero primary">
                <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
            </a>
            <a asp-controller="Contests" asp-action="Index" class="btn-hero secondary">
                <i class="bi bi-search me-2"></i>Explore Contests
            </a>
        </div>
    </div>
</div>

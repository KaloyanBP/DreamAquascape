@model List<DreamAquascape.Data.Models.ApplicationUser>
@{
    ViewData["Title"] = "User Management";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var pageSize = ViewBag.PageSize ?? 20;
    var totalUsers = ViewBag.TotalUsers ?? 0;
    var totalPages = Math.Ceiling((double)totalUsers / pageSize);
}

<div class="container-fluid">
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">
                    <i class="bi bi-people me-2"></i>
                    User Management
                </h1>
                <p class="page-subtitle text-muted">Manage system users and their access</p>
            </div>
            <div class="col-auto">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="card-title mb-0">Users (@totalUsers total)</h5>
                </div>
                <div class="col-auto">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search users..." id="userSearch">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>User</th>
                                <th>Email</th>
                                <th>Joined</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                @(user.UserName?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@user.UserName</h6>
                                                <small class="text-muted">ID: @user.Id.Substring(0, 8)...</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @(user.Id != null ? "Recently" : "Unknown")
                                        </small>
                                    </td>
                                    <td>
                                        @if (user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow)
                                        {
                                            <span class="badge bg-danger">Locked</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <form method="post" asp-action="ToggleUserStatus" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn @(user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow ? "btn-outline-success" : "btn-outline-warning")"
                                                        title="@(user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow ? "Unlock User" : "Lock User")"
                                                        onclick="return confirm('Are you sure you want to @(user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow ? "unlock" : "lock") this user?')">
                                                    <i class="bi @(user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow ? "bi-unlock" : "bi-lock")"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="card-footer bg-white border-top">
                        <nav aria-label="Users pagination">
                            <ul class="pagination pagination-sm justify-content-center mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Users", new { page = currentPage - 1, pageSize })">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min((int)totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Users", new { page = i, pageSize })">@i</a>
                                    </li>
                                }

                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Users", new { page = currentPage + 1, pageSize })">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3 text-muted">No users found</h5>
                    <p class="text-muted">There are no users in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple search functionality
        document.getElementById('userSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}

@section Styles {
    <style>
        .avatar-sm {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
    </style>
}

@model DreamAquascape.Web.ViewModels.Contest.ContestListViewModel
@{
    ViewData["Title"] = "Manage Contests";
    var currentStatus = ViewBag.CurrentStatus as string ?? "";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
}

<div class="container-fluid">
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">
                    <i class="bi bi-trophy me-2"></i>
                    Manage Contests
                </h1>
                <p class="page-subtitle text-muted">Administer all contests in the system</p>
            </div>
            <div class="col-auto">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to Dashboard
                </a>
                <a href="@Url.Action("Create", "Contest")" class="btn btn-primary ms-2">
                    <i class="bi bi-plus-circle me-2"></i>
                    Create New Contest
                </a>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Contests">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label for="status" class="form-label">Filter by Status</label>
                        <select name="status" id="status" class="form-select">
                            <option value="" selected="@(currentStatus == "")">All Contests</option>
                            <option value="active" selected="@(currentStatus == "active")">Active Only</option>
                            <option value="inactive" selected="@(currentStatus == "inactive")">Inactive Only</option>
                            <option value="upcoming" selected="@(currentStatus == "upcoming")">Upcoming</option>
                            <option value="ongoing" selected="@(currentStatus == "ongoing")">Ongoing</option>
                            <option value="ended" selected="@(currentStatus == "ended")">Ended</option>
                            <option value="ending-soon" selected="@(currentStatus == "ending-soon")">Ending Soon</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="pageSize" class="form-label">Items per Page</label>
                        <select name="pageSize" id="pageSize" class="form-select">
                            <option value="5" selected="@(pageSize == 5)">5</option>
                            <option value="10" selected="@(pageSize == 10)">10</option>
                            <option value="20" selected="@(pageSize == 20)">20</option>
                            <option value="50" selected="@(pageSize == 50)">50</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel me-2"></i>
                            Apply Filters
                        </button>
                        <a href="@Url.Action("Contests")" class="btn btn-outline-secondary ms-2">
                            <i class="bi bi-x-circle me-2"></i>
                            Clear
                        </a>
                    </div>
                    <div class="col-md-2 text-end">
                        <small class="text-muted">
                            Showing @Model.Contests.Count() of @Model.Pagination.TotalItems contests
                        </small>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Contests Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (Model.Contests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Contest</th>
                                <th>Status</th>
                                <th>Dates</th>
                                <th>Entries</th>
                                <th>Votes</th>
                                <th>Prize</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contest in Model.Contests)
                            {
                                var now = DateTime.UtcNow;
                                var contestStatus = "";
                                var statusClass = "";

                                if (!contest.IsActive)
                                {
                                    contestStatus = "Inactive";
                                    statusClass = "bg-secondary";
                                }
                                else if (now < contest.SubmissionStartDate)
                                {
                                    contestStatus = "Upcoming";
                                    statusClass = "bg-info";
                                }
                                else if (now <= contest.SubmissionEndDate)
                                {
                                    contestStatus = "Submission Open";
                                    statusClass = "bg-primary";
                                }
                                else if (now <= contest.VotingEndDate)
                                {
                                    contestStatus = "Voting Open";
                                    statusClass = "bg-success";
                                }
                                else
                                {
                                    contestStatus = "Ended";
                                    statusClass = "bg-dark";
                                }

                                <tr>
                                    <td>
                                        <div>
                                            <h6 class="mb-1">
                                                <a href="@Url.Action("Details", "Contests", new { id = contest.Id })"
                                                   class="text-decoration-none">
                                                    @contest.Title
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                @(contest.Description?.Length > 50 ? contest.Description.Substring(0, 50) + "..." : contest.Description)
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass">@contestStatus</span>
                                        @if (!contest.IsActive)
                                        {
                                            <br>

                                            <small class="text-muted">Disabled</small>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <strong>Submission:</strong><br>
                                            @contest.SubmissionStartDate.ToString("MMM dd") - @contest.SubmissionEndDate.ToString("MMM dd")<br>
                                            <strong>Voting:</strong><br>
                                            @contest.VotingStartDate.ToString("MMM dd") - @contest.VotingEndDate.ToString("MMM dd")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <strong>@contest.TotalEntries</strong>
                                        @if (contest.TotalEntries > 0)
                                        {
                                            <br>

                                            <small class="text-muted">entries</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <strong>@contest.TotalVotes</strong>
                                        @if (contest.TotalVotes > 0)
                                        {
                                            <br>

                                            <small class="text-muted">votes</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (contest.Prizes.Any())
                                        {
                                            <strong>@contest.Prizes.Sum(p => p.MonetaryValue ?? 0).ToString("C")</strong>
                                            <br>

                                            <small class="text-muted">@contest.Prizes.Count prize(s)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No prizes</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Contests", new { id = contest.Id })"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Contests", new { id = contest.Id })"
                                               class="btn btn-outline-primary" title="Edit Contest">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" asp-action="ToggleContestStatus" class="d-inline">
                                                <input type="hidden" name="contestId" value="@contest.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn @(contest.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                                        title="@(contest.IsActive ? "Deactivate Contest" : "Activate Contest")"
                                                        onclick="return confirm('Are you sure you want to @(contest.IsActive ? "deactivate" : "activate") this contest?')">
                                                    <i class="bi @(contest.IsActive ? "bi-pause" : "bi-play")"></i>
                                                </button>
                                            </form>
                                            @if (contest.TotalEntries == 0)
                                            {
                                                <form method="post" asp-action="DeleteContest" class="d-inline">
                                                    <input type="hidden" name="contestId" value="@contest.Id" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="btn btn-outline-danger"
                                                            title="Delete Contest"
                                                            onclick="return confirm('Are you sure you want to permanently delete this contest? This action cannot be undone.')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Pagination.TotalPages > 1)
                {
                    <div class="card-footer bg-white border-top">
                        <nav aria-label="Contests pagination">
                            <ul class="pagination pagination-sm justify-content-center mb-0">
                                @if (Model.Pagination.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Contests", new { status = currentStatus, page = Model.Pagination.CurrentPage - 1, pageSize })">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Contests", new { status = currentStatus, page = i, pageSize })">@i</a>
                                    </li>
                                }

                                @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Contests", new { status = currentStatus, page = Model.Pagination.CurrentPage + 1, pageSize })">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                Page @Model.Pagination.CurrentPage of @Model.Pagination.TotalPages
                                (@Model.Pagination.TotalItems total contests)
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-trophy text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3 text-muted">No contests found</h5>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(currentStatus))
                        {
                            <span>No contests match the selected status filter.</span>
                        }
                        else
                        {
                            <span>There are no contests in the system yet.</span>
                        }
                    </p>
                    <a href="@Url.Action("Create", "Contests")" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Create First Contest
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }

        .badge {
            font-size: 0.75em;
        }
    </style>
}

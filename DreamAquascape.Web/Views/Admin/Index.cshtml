@using System.Globalization
@model DreamAquascape.Web.ViewModels.AdminDashboard.DashboardStatsViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">
                    <i class="bi bi-speedometer2 me-2"></i>
                    Admin Dashboard
                </h1>
                <p class="page-subtitle text-muted">Overview of contest management system</p>
            </div>
            <div class="col-auto">
                <span class="badge bg-success" id="last-updated">
                    Last updated: <span id="update-time">@DateTime.Now.ToString("HH:mm:ss")</span>
                </span>
                <button class="btn btn-outline-primary btn-sm ms-2" id="refresh-dashboard"
                        onclick="location.href='@Url.Action("Dashboard", "Admin")'; return false;">
                    <i class="bi bi-arrow-clockwise"></i> Refresh
                </button>
            </div>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Total Contests</h5>
                            <h2 class="card-text fw-bold text-primary mb-0" id="total-contests">@Model.TotalContests</h2>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i>
                                <span id="active-contests">@Model.ActiveContests</span> active
                            </small>
                        </div>
                        <div class="col-auto">
                            <div class="stats-icon bg-primary">
                                <i class="bi bi-trophy"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Total Entries</h5>
                            <h2 class="card-text fw-bold text-info mb-0" id="total-entries">@Model.TotalEntries</h2>
                            <small class="text-warning">
                                <i class="bi bi-clock"></i>
                                <span id="pending-entries">@Model.PendingEntries</span> pending
                            </small>
                        </div>
                        <div class="col-auto">
                            <div class="stats-icon bg-info">
                                <i class="bi bi-images"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Total Votes</h5>
                            <h2 class="card-text fw-bold text-success mb-0" id="total-votes">@Model.TotalVotes</h2>
                            <small class="text-info">
                                <i class="bi bi-graph-up"></i>
                                @Model.AverageVotesPerEntry.ToString("F1") avg/entry
                            </small>
                        </div>
                        <div class="col-auto">
                            <div class="stats-icon bg-success">
                                <i class="bi bi-hand-thumbs-up"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Active Users</h5>
                            <h2 class="card-text fw-bold text-warning mb-0" id="total-users">@Model.TotalUsers</h2>
                            <small class="text-success">
                                <i class="bi bi-percent"></i>
                                @Model.UserEngagementRate.ToString("F1")% engaged
                            </small>
                        </div>
                        <div class="col-auto">
                            <div class="stats-icon bg-warning">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning-charge me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Create", "Contests")" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle me-2"></i>
                                Create New Contest
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Contests", "Admin")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-list-ul me-2"></i>
                                Manage Contests
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Index", "Categories")" class="btn btn-outline-success w-100">
                                <i class="bi bi-tags me-2"></i>
                                Manage Categories
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-info w-100">
                                <i class="bi bi-people me-2"></i>
                                Manage Users
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Alerts Section -->
    @if (Model.ContestsEndingSoon > 0 || Model.PendingEntries > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm border-start border-warning border-4">
                    <div class="card-header bg-light border-bottom">
                        <h5 class="card-title mb-0 text-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            System Alerts
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.ContestsEndingSoon > 0)
                        {
                            <div class="alert alert-warning mb-2" role="alert">
                                <strong>@Model.ContestsEndingSoon</strong> contest(s) ending in a week.
                                <a href="@Url.Action("Contests", "Admin", new { Status = 3, SortBy = 2 })" class="alert-link">Review contests</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Performance Overview Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Performance Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="border-end">
                                <h3 class="text-primary mb-1">@Model.AverageEntriesPerContest.ToString("F1")</h3>
                                <p class="text-muted mb-0">Avg Entries per Contest</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="border-end">
                                <h3 class="text-info mb-1">@Model.TotalPrizeValue.ToString("C", new CultureInfo("fr-FR"))</h3>
                                <p class="text-muted mb-0">Total Prize Value</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h3 class="text-success mb-1">@((Model.TotalEntries > 0 ? (Model.TotalVotes / (double)Model.TotalEntries) : 0).ToString("F1"))</h3>
                            <p class="text-muted mb-0">Votes per Entry</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamAquascape.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DreamAquascape.Web.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #e0f7fa 0%, #b2dfdb 100%);
            font-family: 'Segoe UI', 'Arial', sans-serif;
        }

        .navbar-glass {
            background: rgba(255,255,255,0.85);
            box-shadow: 0 4px 24px rgba(0, 105, 92, 0.08);
            backdrop-filter: blur(8px);
            border-radius: 1.5rem;
            margin-top: 1.5rem;
            position: relative;
            z-index: 1050; /* Bootstrap uses 1050+ for navbars/modals */
        }

        .navbar-brand {
            font-weight: 700;
            color: #009688 !important;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #00695c !important;
            font-weight: 500;
            transition: color 0.2s;
        }

            .nav-link.active, .nav-link:hover {
                color: #26a69a !important;
            }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23009688' viewBox='0 0 30 30'%3e%3cpath stroke='%23009688' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .footer-glass {
            background: rgba(255,255,255,0.85);
            box-shadow: 0 -2px 16px rgba(0, 105, 92, 0.06);
            backdrop-filter: blur(8px);
            border-radius: 1.5rem 1.5rem 0 0;
            margin-bottom: 1.5rem;
        }

        main {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-glass shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://img.icons8.com/color/48/000000/aquarium.png" alt="Logo" style="height:32px;vertical-align:middle;margin-right:8px;">
                    DreamAquascape
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contests" ? "active" : "")" asp-area="" asp-controller="Contests" asp-action="Index">
                                <i class="bi bi-trophy me-1"></i>Contests
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                                   href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-1"></i>Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Contests">
                                            <i class="bi bi-trophy me-2"></i>Manage Contests
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                            <i class="bi bi-tags me-2"></i>Manage Categories
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                            <i class="bi bi-people me-2"></i>Manage Users
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer-glass text-muted mt-5 py-3">
        <div class="container text-center">
            &copy; 2025 - DreamAquascape.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-info">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/utctime.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@using DreamAquascape.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                }
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Dashboard">
                        <i class="bi bi-house-door me-2"></i>My Dashboard
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-person-gear me-2"></i>Profile
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="UserDashboard" asp-action="Entries">
                        <i class="bi bi-images me-2"></i>My Entries
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="UserDashboard" asp-action="Votes">
                        <i class="bi bi-heart me-2"></i>My Votes
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="dropdown-item">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i>Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Login
            </a>
        </li>
    }
</ul>

<style>
    .dropdown-menu {
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 105, 92, 0.15);
        border: none;
        margin-top: 0.5rem;
        min-width: 200px;
    }

    .dropdown-item {
        padding: 0.75rem 1.25rem;
        color: #00695c;
        transition: all 0.2s ease;
    }

    .dropdown-item:hover {
        background-color: #e0f7fa;
        color: #004d40;
    }

    .dropdown-item i {
        width: 16px;
        text-align: center;
    }

    .dropdown-divider {
        margin: 0.5rem 0;
        border-color: #b2dfdb;
    }

    .dropdown-toggle::after {
        margin-left: 0.5rem;
    }

    .nav-link.dropdown-toggle {
        color: #00695c !important;
        font-weight: 500;
        transition: color 0.2s;
    }

    .nav-link.dropdown-toggle:hover {
        color: #26a69a !important;
    }

    .dropdown-item button {
        background: none;
        border: none;
        padding: 0;
        color: inherit;
        font: inherit;
        width: 100%;
        text-align: left;
    }

    .dropdown-item button:hover {
        background: none;
    }
</style>

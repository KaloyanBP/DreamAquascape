@model List<DreamAquascape.Web.ViewModels.UserDashboard.UserSubmissionViewModel>

@if (Model.Any())
{
    @foreach (var submission in Model)
    {
        <div class="submission-item mb-3">
            <div class="row">
                <div class="col-md-3">
                    @if (submission.Images.Any())
                    {
                        <img src="@submission.Images.First().ImageUrl" 
                             alt="@submission.EntryTitle" 
                             class="submission-thumbnail">
                    }
                    else
                    {
                        <div class="submission-thumbnail-placeholder">
                            <i class="fas fa-image fa-2x text-muted"></i>
                        </div>
                    }
                </div>
                <div class="col-md-9">
                    <div class="submission-info">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h6 class="submission-title mb-1">@submission.EntryTitle</h6>
                            <span class="badge @GetStatusBadgeClass(submission.Status)">
                                @submission.Status
                            </span>
                        </div>
                        
                        <p class="text-muted small mb-2">
                            Contest: <strong>@submission.ContestTitle</strong>
                        </p>
                        
                        <div class="submission-stats">
                            <div class="row text-muted small">
                                <div class="col-6">
                                    <i class="fas fa-vote-yea me-1"></i>
                                    @submission.VotesReceived votes (@submission.VotePercentage.ToString("F1")%)
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-trophy me-1"></i>
                                    Rank #@submission.Ranking
                                </div>
                            </div>
                        </div>
                        
                        <div class="submission-actions mt-2">
                            <a href="/entries/@submission.EntryId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>View Entry
                            </a>
                            
                            @if (submission.CanEdit)
                            {
                                <a href="contests/entries/@submission.EntryId/edit" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                            }
                            
                            @if (submission.IsWinner)
                            {
                                <span class="badge bg-success ms-2">
                                    <i class="fas fa-crown me-1"></i>Winner!
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        @if (submission != Model.Last())
        {
            <hr class="my-3">
        }
    }
}
else
{
    <div class="text-center py-4">
        <i class="fas fa-images fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No Submissions Yet</h5>
        <p class="text-muted">You haven't submitted any contest entries yet.</p>
        <a href="/contests" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Submit Your First Entry
        </a>
    </div>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Winner" => "bg-success",
            "Contest Ended" => "bg-secondary",
            "Active" => "bg-primary",
            _ => "bg-secondary"
        };
    }
}

<style>
    .submission-thumbnail {
        width: 100%;
        height: 80px;
        object-fit: cover;
        border-radius: 0.375rem;
    }
    
    .submission-thumbnail-placeholder {
        width: 100%;
        height: 80px;
        background-color: #f8f9fa;
        border: 2px dashed #dee2e6;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .submission-title {
        font-weight: 600;
        color: #495057;
    }
    
    .submission-item {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        transition: box-shadow 0.15s ease-in-out;
    }
    
    .submission-item:hover {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>

@using DreamAquascape.Web.ViewModels.AdminDashboard.ContestCategory
@model DreamAquascape.Web.ViewModels.Contest.EditContestViewModel

@{
    ViewData["Title"] = "Edit Contest";
}

<div class="container my-5">
    <!-- Card for a clean, modern look -->
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h2 class="mb-0">Edit Contest: @Model.Title</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data" method="post" novalidate>
                @* Display validation summary *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @Html.HiddenFor(m => m.Id)

                <!-- Current Contest Image -->
                @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Current Contest Image</label>
                        <p class="form-text mb-2">Check the box below to remove the current image</p>
                        <div class="card" style="max-width: 300px;">
                            <img src="@Model.CurrentImageUrl" alt="Current Contest Image" class="card-img-top" style="height: 200px; object-fit: cover;" />
                            <div class="card-body text-center">
                                <div class="form-check">
                                    <input asp-for="RemoveCurrentImage" class="form-check-input" type="checkbox" id="removeCurrentImage">
                                    <label class="form-check-label text-danger" for="removeCurrentImage">
                                        <i class="bi bi-trash3 me-1"></i>Remove current image
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- New Image Upload -->
                <div class="mb-3">
                    <label for="newImageFile" class="form-label fw-bold">
                        @(string.IsNullOrEmpty(Model.CurrentImageUrl) ? "Upload Contest Image" : "Upload New Contest Image (optional)")
                        @if (string.IsNullOrEmpty(Model.CurrentImageUrl))
                        {
                            <span class="text-danger">*</span>
                        }
                    </label>
                    <input name="newImageFile" class="form-control" type="file" accept="image/*" onchange="previewImage(event, '_Contest')" />
                </div>
                <!-- Image Preview -->
                <div class="mb-4" id="imagePreviewContainer_Contest" style="display:none;">
                    <p class="fw-semibold mb-1">New Image Preview:</p>
                    <img id="imagePreview_Contest" src="#" alt="Image Preview" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
                </div>

                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">
                        Contest Title <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Title" class="form-control" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        Description <span class="text-danger">*</span>
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Categories -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Categories (Optional)</label>
                    <div class="card border-light">
                        <div class="card-body">
                            @if (ViewBag.AvailableCategories != null)
                            {
                                <div class="d-flex flex-wrap gap-3">
                                    @foreach (var category in (IEnumerable<ContestCategorySelectViewModel>)ViewBag.AvailableCategories)
                                    {
                                        <div class="card border-secondary bg-light p-3 flex-fill" style="min-width: 200px; max-width: 250px;">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="SelectedCategoryIds" value="@category.Id" id="category_@category.Id"
                                                       @(Model.SelectedCategoryIds != null && Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "") />
                                                <label class="form-check-label" for="category_@category.Id">
                                                    <strong>@category.Name</strong>
                                                    @if (!string.IsNullOrEmpty(category.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@category.Description</small>
                                                    }
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No categories available.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Date Fields -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="SubmissionStartDate" class="form-label fw-bold">Submission Start Date <span class="text-danger">*</span></label>
                        <input asp-for="SubmissionStartDate" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="SubmissionStartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="VotingStartDate" class="form-label fw-bold">Voting Start Date <span class="text-danger">*</span></label>
                        <input asp-for="VotingStartDate" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="VotingStartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="VotingEndDate" class="form-label fw-bold">Voting End Date <span class="text-danger">*</span></label>
                        <input asp-for="VotingEndDate" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="VotingEndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-check mb-4">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-bold">
                        Contest is Active
                    </label>
                </div>

                <!-- Prize Information -->
                <div class="mb-4">
                    <div class="card border-info shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h3 class="mb-0">Prize Details</h3>
                        </div>
                        <div class="card-body">
                            <!-- Current Prize Image -->
                            @if (!string.IsNullOrEmpty(Model.CurrentPrizeImageUrl))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Current Prize Image</label>
                                    <p class="form-text mb-2">Check the box below to remove the current prize image</p>
                                    <div class="card" style="max-width: 250px;">
                                        <img src="@Model.CurrentPrizeImageUrl" alt="Current Prize Image" class="card-img-top" style="height: 150px; object-fit: cover;" />
                                        <div class="card-body text-center">
                                            <div class="form-check">
                                                <input asp-for="RemoveCurrentPrizeImage" class="form-check-input" type="checkbox" id="removeCurrentPrizeImage">
                                                <label class="form-check-label text-danger" for="removeCurrentPrizeImage">
                                                    <i class="bi bi-trash3 me-1"></i>Remove current image
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="mb-3">
                                <label asp-for="PrizeName" class="form-label fw-bold">
                                    Prize Name
                                </label>
                                <input asp-for="PrizeName" class="form-control" />
                                <span asp-validation-for="PrizeName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PrizeDescription" class="form-label fw-bold">
                                    Prize Description
                                </label>
                                <textarea asp-for="PrizeDescription" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="PrizeDescription" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PrizeMonetaryValue" class="form-label fw-bold">
                                    Prize Monetary Value (EUR)
                                </label>
                                <input asp-for="PrizeMonetaryValue" class="form-control" type="number" step="0.01" min="0" />
                                <span asp-validation-for="PrizeMonetaryValue" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="newPrizeImageFile" class="form-label fw-bold">
                                    @(string.IsNullOrEmpty(Model.CurrentPrizeImageUrl) ? "Upload Prize Image" : "Upload New Prize Image (optional)")
                                </label>
                                <input name="newPrizeImageFile" class="form-control" type="file" accept="image/*" onchange="previewImage(event, '_Prize')" />
                            </div>
                            <!-- Prize Image Preview -->
                            <div class="mb-4" id="imagePreviewContainer_Prize" style="display:none;">
                                <p class="fw-semibold mb-1">New Prize Image Preview:</p>
                                <img id="imagePreview_Prize" src="#" alt="Prize Image Preview" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="row">
                    <div class="col">
                        <a class="btn btn-secondary btn-lg w-100" href="@Url.Action("Contests", "Admin")">Cancel</a>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-warning btn-lg w-100">Update Contest</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Function to show image preview
        function previewImage(event, idSuffix) {
            const input = event.target;
            const previewContainer = document.getElementById('imagePreviewContainer' + idSuffix);
            const previewImage = document.getElementById('imagePreview' + idSuffix);

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewContainer.style.display = 'block';
                };

                reader.readAsDataURL(input.files[0]);

                // Auto-uncheck remove checkboxes when new file is selected
                if (idSuffix === '_Contest') {
                    const removeCheckbox = document.getElementById('removeCurrentImage');
                    if (removeCheckbox) {
                        removeCheckbox.checked = false;
                    }
                } else if (idSuffix === '_Prize') {
                    const removeCheckbox = document.getElementById('removeCurrentPrizeImage');
                    if (removeCheckbox) {
                        removeCheckbox.checked = false;
                    }
                }
            } else {
                previewImage.src = '#';
                previewContainer.style.display = 'none';
            }
        }

        // Format datetime-local inputs
        document.addEventListener('DOMContentLoaded', function() {
            const dateInputs = document.querySelectorAll('input[type="datetime-local"]');
            dateInputs.forEach(input => {
                if (input.value) {
                    // Convert server datetime to local datetime format
                    const date = new Date(input.value);
                    const offset = date.getTimezoneOffset() * 60000;
                    const localDate = new Date(date.getTime() - offset);
                    input.value = localDate.toISOString().slice(0, 16);
                }
            });
        });
    </script>
}

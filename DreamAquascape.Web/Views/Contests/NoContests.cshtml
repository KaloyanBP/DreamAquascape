@{
    ViewData["Title"] = "No Contests Available";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-fish fa-4x text-muted"></i>
    </div>

    <h2 class="text-muted mb-3">No Active Contests</h2>
    <p class="lead text-muted mb-4">
        There are currently no contests available to join.
    </p>

    <div class="d-flex justify-content-center gap-2 flex-wrap">
        @if (User != null && User.Identity.IsAuthenticated)
        {
            <a asp-controller="Contests" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Contest
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Join Now
            </a>
        }

        <a asp-controller="Contest" asp-action="Index" asp-route-filter="all" class="btn btn-outline-secondary">
            <i class="fas fa-history"></i> Past Contests
        </a>

        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-home"></i> Home
        </a>
    </div>
</div>
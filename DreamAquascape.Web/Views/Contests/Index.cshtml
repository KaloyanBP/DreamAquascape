@using DreamAquascape.Web.ViewModels.Contest
@model IEnumerable<ContestItemViewModel>

<h2 class="mb-4">Monthly Aquascaping Contests</h2>

@if (Model == null)
{
    <p>Loading contests...</p>
}
else if (!Model.Any())
{
    <p>No contests found.</p>
}
else
{
    var activeContests = Model.Where(c => c.IsActive).ToList();
    var archivedContests = Model.Where(c => !c.IsActive).ToList();

    <h3>Active Contests</h3>
    @if (!activeContests.Any())
    {
        <p>No active contests.</p>
    }
    else
    {
        <div class="row g-4">
            @foreach (var contest in activeContests)
            {
                <div class="col-12">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(contest.ImageUrl))
                        {
                            <img src="@contest.ImageUrl" class="card-img-top" alt="@contest.Title" style="object-fit:cover; height:220px;">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/800x220?text=Aquascape" class="card-img-top" alt="No image" style="object-fit:cover; height:220px;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@contest.Title</h5>
                            <p class="card-text">
                                <strong>Start:</strong> @contest.StartDate.ToShortDateString()<br />
                                <strong>End:</strong> @contest.EndDate.ToShortDateString()<br />
                                <span class="badge bg-success">Active</span>
                            </p>
                            <a class="btn btn-primary" href="@Url.Action("Details", "Contests", new { id = contest.Id })">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <button class="btn btn-secondary mt-4" type="button" onclick="document.getElementById('archivedContests').style.display='block'; this.style.display='none';">
        Show Archived Contests
    </button>

    <div id="archivedContests" style="display:none; margin-top:20px;">
        <h3>Archived Contests</h3>
        @if (!archivedContests.Any())
        {
            <p>No archived contests.</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var contest in archivedContests)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm" style="max-width: 350px; margin: auto;">
                            @if (!string.IsNullOrEmpty(contest.ImageUrl))
                            {
                                <img src="@contest.ImageUrl" class="card-img-top" alt="@contest.Title" style="object-fit:cover; height:120px;">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/350x120?text=Aquascape" class="card-img-top" alt="No image" style="object-fit:cover; height:120px;">
                            }
                            <div class="card-body">
                                <h6 class="card-title">@contest.Title</h6>
                                <p class="card-text" style="font-size:0.95em;">
                                    <strong>Start:</strong> @contest.StartDate.ToShortDateString()<br />
                                    <strong>End:</strong> @contest.EndDate.ToShortDateString()<br />
                                    <span class="badge bg-secondary">Archived</span>
                                </p>
                                <a class="btn btn-primary" href="@Url.Action("Details", "Contests", new { id = contest.Id })">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}